                                                        <div class="col-sm-12">
                                                            <button type="button" class="btn btn-primary">
                                                                <span class="fa fa-plus"></span>
                                                                Añadir Imagen de portada
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div><!-- Fin de row 2 --> 
